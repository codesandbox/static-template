


{% if context == 'cart' %}
{% include 'svg.inc.twig' %}

<div class="page-wrapper fc-cart">
    <div class="content-page"></div>
    <div class="fc-cart">
        <div class="cart">
            <div class="ato-keepbuying"><img src="images/Vector.svg" loading="lazy" alt="" class="image-17 fc">
                <a data-fc-sidecart-dismiss><h4 class="ato-title-content">continuez vos achats</h4></a>
            </div>
            <div class="ato-cart-container">
                {% block cart_title %}
                <div class="ato-cart-title">
                    <h3 class="fc-cart-heading">Panier</h3>
                    <p class="nb-products">
                        <span data-fc-order-quantity-integer="fc-order-quantity-integer">{{ item_count }}</span>
                        <span data-fc-lang-cart-item="{{ config.lang.cart_item }}" data-fc-lang-cart-items="{{ config.lang.cart_items }}">{{ temp_lang_cart_items|lower }}</span>
                        {{ config.lang.cart_in_your_order|raw }}</p>
                </div>
                {% endblock cart_title %}


                <div class="ato-cart">
                    <div class="line-brack"></div>

                    {% for item in items %}
                        <p>item</p>
                    <div class="cart-element"></div>
                    <div class="line-brack"></div>

                    {% endfor %}
                </div>
            </div>
            <a href="#" class="ato-checkout w-button"><span class="ato-checkout-btn">PAYER</span></a>
        </div>
    </div>
</div>

{% endif %}





